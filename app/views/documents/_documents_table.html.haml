- if @documents.present?
  %table.table.table-hover.top-spaced
    %thead
      %tr
        %th Doklad
        %th

    %tbody
      - @documents.each do |document|
        %tr
          %td=document.name

          %td
            = link_to fa_icon('eye', :text => "Zobrazit"), document_path(document), :class => 'btn btn-default'
            = link_to fa_icon('trash', :text => "Smazat"), document_path(document), :method => :delete, :class => 'btn btn-default', :remote => true, :data => { :confirm => "Jste si jisti, že chcete smazat tento doklad?" }
- else
  = "Nejsou zde zatím žádné doklady"