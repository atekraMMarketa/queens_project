= simple_form_for  @document do |f|

  .form-group
    = f.label "Název"
    = f.input :name, :label => false, :class => 'form-control', :placeholder => "Např. Faktura číslo 1234567"

  .form-group
    = label_tag :variants_tokens, "Výběr položek z variant produktů"
    = text_field_tag :variants_tokens, nil, :class => 'form-control item-input', :placeholder => "vyberte"

  .pull-left
    = f.submit "Uložit", :class => 'btn btn-default'