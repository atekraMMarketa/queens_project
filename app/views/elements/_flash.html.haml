#main-alert
  - if flash[:error].present?
    .alert.alert-danger
      = link_to '×', '#', :class => 'close', :data => { :dismiss => 'alert' }
      = simple_format flash[:error]

  - if flash[:notice].present?
    .alert.alert-success
      = link_to '×', '#', :class => 'close', :data => { :dismiss => 'alert' }
      = simple_format flash[:notice]
